<div class="password-forgot">
  <div class="box-password">
  <%= link_to image_tag("appstory-color.png", class:"header-logo-password"), "/" %>
    <div class="possword-inner">
      <h2>パスワードを忘れちゃいましたか？</h2>
    </div> 

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field-password">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"field-place" %>
      </div>
      <div class="field-password">
        <div class="actions-password">
          <%= f.submit "新しいパスワードを教えてください" ,class: "radius" %>
        </div>
      </div>
    <% end %>
  </div>  
</div>